                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="{StaticResource border_magenta}"/>
                        <Setter Property="Foreground" Value="{StaticResource border_magenta}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource header_background}"/>
                        <Setter Property="Opacity" Value="0.9"/>
                        <Setter Property="Margin" Value="3"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ScrollBar}">
                                    <Grid x:Name="Bg"
                                              SnapsToDevicePixels="true">
                                        <Border BorderBrush     = "{TemplateBinding BorderBrush}"
                                                    BorderThickness = "{TemplateBinding BorderThickness}"
                                                    Background      = "{TemplateBinding Background}"

                                                    Grid.Row        = "1"
                                                    CornerRadius="10"/>

                                        <Track x:Name="PART_Track"
                                                   IsDirectionReversed="true"
                                                   IsEnabled="{TemplateBinding IsMouseOver}"
                                                   Grid.Row="1">
                                            <Track.Thumb>
                                                <Thumb Style="{StaticResource ScrollBarThumbVertical}"
                                                           Margin="2"/>
                                            </Track.Thumb>
                                        </Track>

                                    </Grid>

                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="ListBox">
                        <Style.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Style.Resources>
                    </Style>
                </ListBox.Resources>




                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox  Background="#EE82EE" Foreground="{StaticResource text_white}" IsChecked="{Binding IsChecked}"  Checked="UIe_ViewChecked" Unchecked="UIe_ViewUnchecked" >
                            <TextBlock Text="{Binding Name}"/>
