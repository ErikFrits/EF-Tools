                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <DockPanel Margin="15,0,0,0" >
                <CheckBox x:Name="UI_checkbox_views"           Content="Views"         IsChecked="True"  Margin="0,2,20,2" Checked="UI_event_checked_views" Unchecked="UI_event_checked_views"/>
