                        Height="20"
                        Width="100"
                        Margin="5"
                        />
                <!--BUTTON_2-->
                <Button Content="Select None"
                        Click="button_select_none"
                        Height="20"
                        Width="100"
                        Margin="5"
                        />
            </StackPanel>
            <!--BUTTONS END-->


            <StackPanel x:Name="UI_stack_button">
                <!--BUTTON-->
                <Button Click="button_run" Content="Select Destination Views" Margin="0,10,0,0" Width="210" Height="25"/>
            </StackPanel>

        </StackPanel>
        <!--MAIN END-->

