<Window
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Delete Line Patterns"
    Height="500" Width="300"
    MinHeight="500" MinWidth="300"
    WindowStartupLocation="CenterScreen" HorizontalAlignment="Center"
    ShowInTaskbar="False">
    <Grid>


        <StackPanel x:Name="Column_3" Margin="5,15,5,15">

            <GroupBox x:Name="G_Select_parameters"
Header="LinePatterns to delete: "
Height="400" Margin="0,0,0,0">
                <ListBox Name="x_listbox"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </GroupBox>

            <Button x:Name="x_button_run"
Background="Tan"
BorderBrush="Gray"
FontWeight="Bold"
Content="Delete Line Patterns"
Click="x_buttonclick_run"
                            />
        </StackPanel>

    </Grid>
</Window>

